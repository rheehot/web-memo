@import url('http://fonts.googleapis.com/css?family=Titillium+Web:400,600')
@import url('http://fonts.googleapis.com/earlyaccess/nanumgothic.css')


html
  min-height 100vh
  background url('bkground.jpg') center / cover fixed

body
  min-height 100vh
  padding 130px 0 20px 0

  font-family 'Titillium Web', 'Nanum Gothic', sans-serif
  background linear-gradient(to bottom, white 100px, transparent 700px)


img
  display block
  width 500px
  margin 0 auto

textarea
  width 100%
  height 40px
  font-size 1.2em
  background-color rgba(255, 255, 255, 0.95)
  // reset css
  display block
  border none
  resize none
  outline none
  overflow hidden


#write
  max-width 600px
  margin 40px auto 80px auto
  padding 0 20px

  > textarea
    height 60px
    padding 12px
    border 2px solid rgba(0, 0, 0, 0.1)
    border-radius 7px
    box-shadow 5px 5px 0 rgba(0, 0, 0, 0.1)

    transition height 0.2s, min-height 0.2s

    placeholder()
      font-size 1.8em
      text-align center
      line-height 48px
      transition color 0.2s

    // You can't use `@extends` because of the weird behavior of chrome
    &::-webkit-input-placeholder
      placeholder()
    &::-moz-placeholder
      placeholder()
    &:-ms-input-placeholder
      placeholder()

    &:focus
      min-height 200px

      focus-placeholder()
        color transparent
      &::-webkit-input-placeholder
        focus-placeholder()
      &::-moz-placeholder
        focus-placeholder()
      &:-ms-input-placeholder
        focus-placeholder()

  position relative
  > a
    position absolute
    right 50px
    bottom 28px
    color #1abc9c


#result
  column-count 3
  -moz-column-count 3
  -webkit-column-count 3
  column-gap 20px
  -moz-column-gap 20px
  -webkit-column-gap 20px

  > div
    display inline-block
    width 100%

    > textarea
      margin 5px 0
      border 8px solid transparent
      padding 4px
      box-shadow 0 3px 0 rgba(0, 0, 0, 0.08)
      transition height 0.2s, min-height 0.2s, border-color 0.2s
      &:focus
        border-color rgba(0, 0, 0, 0.05)

    position relative
    > button
      position absolute
      top 2px
      right 2px
      outline none
